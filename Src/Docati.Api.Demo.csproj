<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net461</TargetFrameworks> <!-- In the future netcoreapp can be specified here as well, although for .NET Core Docati will not support the PDF format. -->
    <RuntimeIdentifiers>win10-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="data.xml" />
    <None Remove="License.lic" />
    <None Remove="Template.docx" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="data.xml" />
    <EmbeddedResource Include="License.lic" />
    <EmbeddedResource Include="Template.docx" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Docati.Api" Version="5.1.9674-beta" />
  </ItemGroup>

</Project>

